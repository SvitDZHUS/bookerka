navbar.wrapper.shadow.border-right-brown
  .navbar.d-flex.justify-content-center
    btn.border-brown.font-weight-bold.mx-2.p-2 = t("sidebar.#{current_user.role}_logo") 
  ul.nav.d-flex.flex-column.p-2
    li = link_to admin_users_path, class: "font-weight-bold nav-item btn border-brown animated-shadow d-flex justify-content-between mb-2" do
        span = t('sidebar.users')
        i.bi.bi-person-lines-fill
    li = link_to admin_books_path, class: "font-weight-bold nav-item btn border-brown animated-shadow d-flex justify-content-between mb-2" do
        span = t('sidebar.books')
        i.bi.bi-book-half
    li = link_to admin_categories_path, class: "font-weight-bold nav-item btn border-brown animated-shadow d-flex justify-content-between mb-2" do
        span = t('sidebar.categories')
        i.bi.bi-bookmark-fill
  .spacer
  .profile.p-2
    .btn-group.dropup.d-flex.justify-content-between.animated-shadow
      button.btn.brown.dropdown-toggle.d-flex.justify-content-between data-bs-toggle="dropdown" aria-expanded="true"
        span.no-after.text-white = current_user.profile.first_name || current_user.email
      ul.dropdown-menu
        li.nav-item.btn.border-brown.animated-shadow.d-flex.justify-content-between.align-items-center
          = button_to t('header.sign_out'), destroy_user_session_path, method: :delete, class: "btn font-weight-bold" 
          i.bi.bi-caret-right
